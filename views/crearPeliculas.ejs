<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./partials/head.ejs')%>
</head>
<body>
    <%-include('./partials/header.ejs')%>


<div class="container-fluid h-100 bg-light text-dark">
    <div class="row justify-content-center align-items-center">
        <h1>CREAR PELICULA</h1>
    </div>
    <hr />
    <div class="row justify-content-center align-items-center h-100">
        <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
            <form action="/peliculas/crear" method="POST">
                <div class="form-group">
                    <select name="genero" class="form-control">
                        <% for( let i = 0; i < generos.length; i++ ) { %>
                        <option value="<%= generos[i].id %> ">
                            <%= generos[i].name %>
                        </option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="ingrese el titulo" name="titulo"/>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="ingrese los premios" name="premio" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="ingrese la duracion" name="duracion" />
                </div>
                <div class="form-group">
                    <input type="date" class="form-control" placeholder="" name="fecha" />
                </div>
                <div class="form-group">
                    <div class="container">
                        <div class="row">
                            
                            <div class="col"><button class="col-6 btn btn-primary btn-sm float-right">Crear</button>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>


<%-include('./partials/footer.ejs')%>

<%-include('./partials/scripts.ejs')%>
</body>
</html>


